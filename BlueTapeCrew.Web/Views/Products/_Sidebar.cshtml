@model BlueTapeCrew.Web.ViewModels.ProductViewModel

<div class="sidebar col-md-3 col-sm-5 hidden-xs hidden-sm">
  <ul class="list-group margin-bottom-25 sidebar-menu">
    @foreach (var item in Model.Menu)
    {
      var classVar = "";
      if (item.MenuName.Equals(Model.Category))
      {
        classVar = "open";
      }
      <li class="list-group-item clearfix sidebar-products @classVar" onclick="sideMenuClick()">
        <a class="dropdown-toggle" data-toggle="dropdown" data-target="#" href="javascript:;"><i class="fa fa-angle-right"></i> @Html.DisplayFor(modelItem => item.MenuName)</a>
        <ul class="dropdown-menu">
          @foreach (var itm in item.Items)
          {
            <li><a href="@Url.Action("Index", "Products", new {@name = itm.LinkName})" class="product-link" id="@itm.LinkName"><i class="fa fa-angle-right"></i> @itm.ItemName </a></li>
          }
        </ul>
      </li>
    }
  </ul>
  <div class="sidebar-products clearfix">
    <h2>Bestsellers</h2>
    @foreach (var item in Model.BestSellers)
    {
      <div class="item">
        <a href="~/products/@item.LinkName"><img src="@item.ImgSource" alt="@item.Name"></a>
        <h3>
          <a href="~/products/@item.LinkName">@item.Name</a>
        </h3>
        <div class="price">$@item.Price</div>
      </div>
    }
  </div>
</div>