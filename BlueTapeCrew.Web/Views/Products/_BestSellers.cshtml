@model IEnumerable<BlueTapeCrew.Web.Models.Entities.Product>
<h2>Bestsellers</h2>
@foreach (var item in Model)
{
    <div class="item">
        <a href="~/products/@item.LinkName">
            <img src="data:@item.Image.MimeType;base64,@Convert.ToBase64String(item.Image.ImageData)" class="img-responsive" alt="@item.ProductName" />
        </a>
        <h3><a href="~/products/@item.LinkName">@item.ProductName</a></h3>
        <div class="price">$@($"{item.Styles.FirstOrDefault().Price:n2}")</div>
    </div>
}



